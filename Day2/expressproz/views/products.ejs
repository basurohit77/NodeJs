<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>

    <%- include('menu'); %>
        <h3>Products</h3>
        <table>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Price</th>
            </tr>
            <% products.forEach((p)=>{ %>
                <tr>
                    <td>
                        <%= p.id %>
                    </td>
                    <td>
                        <%= p.name %>
                    </td>
                    <td>
                        <%= p.price %>
                    </td>
                </tr>
                <% }) %>
        </table>
</body>

</html>